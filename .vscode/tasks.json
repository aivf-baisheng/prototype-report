{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Backend",
            "type": "shell",
            "windows": {
                "command": ".\\venv\\Scripts\\python.exe",
                "args": [
                    "-m",
                    "uvicorn",
                    "main:app",
                    "--reload"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^INFO:\\s+Started\\s+server\\s+process",
                    "endsPattern": "^INFO:\\s+Application\\s+startup\\s+complete"
                }
            }
        },
        {
            "label": "Start Frontend",
            "type": "shell",
            "command": "npm",
            "args": ["run", "dev"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*VITE.*",
                    "endsPattern": "^.*Local:.*"
                }
            }
        },
        {
            "label": "Start Development Environment",
            "dependsOn": ["Start Backend", "Start Frontend"],
            "dependsOrder": "parallel",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}